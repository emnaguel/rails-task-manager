<h1> My tasks </h1>


<% @tasks.each do |task| %>
<li class = "list-group-item">
  <%= link_to task.title, task_path(task) %>
  <div>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
      </li>
<% end %>
<br>

<%= link_to "Add a new task", tasks_new_path, class: 'btn btn-primary'%>
